<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView

        android:id="@+id/diplayTextId"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="40sp"
        android:hint="Display"
        android:textStyle="bold"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="02dp"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/clearallId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="CLEAR ALL"
            android:textSize="25dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button7Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button8Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button9Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/divButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="/"
            android:textSize="40dp" />

    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    <Button
        android:id="@+id/button4Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="4"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button5Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="5"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button6Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="6"
        android:textSize="40dp" />

    <Button
        android:id="@+id/intButtonId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"

        android:text="x"
        android:textSize="40dp" />

    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    <Button
        android:id="@+id/button1Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="1"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button2Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="2"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button3Id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="3"
        android:textSize="40dp" />

    <Button
        android:id="@+id/subButtonId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#433C56EC"
        android:text="-"
        android:textSize="40dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button0Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="0"
            android:textSize="40dp" />

        <Button
            android:id="@+id/dotButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="."
            android:textSize="40dp" />

        <Button
            android:id="@+id/addButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="+"
            android:textSize="40dp" />

        <Button
            android:id="@+id/equalButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#433C56EC"
            android:text="="
            android:textSize="40dp" />

    </LinearLayout>

</LinearLayout>